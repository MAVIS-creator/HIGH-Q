<IfModule mod_rewrite.c>
    RewriteEngine On
    Options -Indexes

    # Root-level rewrite base for production hosting
    RewriteBase /

    # Serve public assets - relative substitution keeps directory prefix (e.g., /HIGH-Q)
    RewriteRule ^assets(?:/(.*))?$ public/assets/$1 [L,NC]

    # Normalize accidental double /public/public paths (defensive)
    # Use THE_REQUEST to avoid internal rewrite loops and issue a clean 301
    RewriteCond %{THE_REQUEST} \s/public/public/ [NC]
    RewriteRule ^public/public/(.*)$ /public/$1 [L,R=301]

    # Allow direct access to static files and directories
    RewriteRule ^(public/assets|admin/assets|uploads|favicon\.ico|robots\.txt)($|/) - [L]

    # Handle admin section
    RewriteRule ^admin/(.*)$ admin/$1 [L]

    # Handle direct file access
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Pretty payment URL
    RewriteRule ^pay/([A-Za-z0-9_-]+)/?$ public/payments_wait.php?ref=$1 [L,QSA]

    # Protected downloads
    RewriteRule ^downloads/(.*)$ public/download_attachment.php?file=$1 [L,QSA]

    # Redirect root to public/index.php
    RewriteRule ^$ public/index.php [L]

    # Handle public pages
    RewriteRule ^(about|contact|programs|program|news|post|community|privacy|exams)/?$ public/$1.php [L]

    # Default handler for other URLs
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/public/ [NC]
    RewriteRule ^(.*)$ public/$1 [L]

</IfModule>
# Protect sensitive files
<FilesMatch "^\.(env|htaccess|git|config)|\.(sql|bak|config|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Prevent directory listing
Options All -Indexes

# Protect against common vulnerabilities
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} base64_encode[^(*]*\([^)]*\) [OR]
    RewriteCond %{QUERY_STRING} (<|%3C)([^s]*s)+cript.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule .* index.php [F]
    
    # Normalize duplicate slashes (optional hardening)
    # RewriteCond %{REQUEST_URI} ^//+
    # RewriteRule .* $1 [R=301,L]
</IfModule>

# Custom error pages
ErrorDocument 400 /public/errors/400.php
ErrorDocument 401 /public/errors/401.php
ErrorDocument 403 /public/errors/403.php
ErrorDocument 404 /public/errors/404.php
ErrorDocument 500 /public/errors/500.php
