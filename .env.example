# HIGH-Q SOLID ACADEMY - Environment Configuration
# Copy this file to .env and fill in your actual values
# NOTE: Changes to .env must be synced to admin/.env for admin panel to work properly

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_NAME=highq_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ===========================================
# APPLICATION URL CONFIGURATION  
# ===========================================
# Base URL for the application (used for email links, redirects, etc.)
# IMPORTANT: Update this for production and ngrok deployments
# Examples:
#   Localhost: http://localhost/HIGH-Q
#   Ngrok: https://your-subdomain.ngrok-free.dev/HIGH-Q
#   Production: https://yourdomain.com
APP_URL=http://localhost/HIGH-Q

# Optional: Separate admin URL if hosted on different domain/path
# Leave commented out to use APP_URL + /admin
# ADMIN_URL=http://localhost/HIGH-Q/admin

# Fallback host when HTTP_HOST is not available
APP_FALLBACK_HOST=localhost

# ===========================================
# MAIL CONFIGURATION (SMTP)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@highqacademy.com
MAIL_FROM_NAME="HIGH Q SOLID ACADEMY"

# Enable SMTP debug output (1=true, 0=false)
MAIL_DEBUG=0

# Optional: Path to CA certificate file for SSL verification
# MAIL_CAFILE=/path/to/cacert.pem

# ===========================================
# PAYMENT GATEWAY CONFIGURATION (Paystack)
# ===========================================
# Get your API keys from https://dashboard.paystack.com/settings/developer
PAYSTACK_PUBLIC=pk_test_xxxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET=sk_test_xxxxxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# ===========================================
# BANK ACCOUNT INFORMATION
# ===========================================
# Used for displaying bank transfer payment options
SITE_BANK_ACCOUNT=0123456789
SITE_BANK_NAME=Your Bank Name
SITE_ACCOUNT_NAME=HIGH Q SOLID ACADEMY

# ===========================================
# SESSION & SECURITY
# ===========================================
# Session timeout in seconds (default: 7200 = 2 hours)
SESSION_TIMEOUT=7200

# Enable/disable two-factor authentication
2FA_ENABLED=false

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE=100

# Allowed file extensions for uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,docx

# ===========================================
# RECAPTCHA (Optional)
# ===========================================
# Get keys from https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key

# ===========================================
# DEVELOPMENT/DEBUG
# ===========================================
# Enable debug mode (shows detailed errors)
DEBUG_MODE=false

# Log file path
LOG_PATH=storage/logs
